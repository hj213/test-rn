{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "jsx": "react-native",
      "declaration": true,
      "declarationDir": "dist/types",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": false
    },
    "include": ["src"]
  }